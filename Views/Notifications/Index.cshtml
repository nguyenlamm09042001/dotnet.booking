@model IEnumerable<booking.Models.Notification>

@{
    ViewData["Title"] = "Thông báo";

    string Badge(string type, bool isRead)
    {
        type = (type ?? "").Trim().ToLowerInvariant();
        if (isRead) return "bg-slate-100 text-slate-600 ring-1 ring-slate-200";

        return type switch
        {
            "success" => "bg-emerald-50 text-emerald-700 ring-1 ring-emerald-200",
            "warning" => "bg-amber-50 text-amber-700 ring-1 ring-amber-200",
            "error"   => "bg-rose-50 text-rose-700 ring-1 ring-rose-200",
            _         => "bg-sky-50 text-sky-700 ring-1 ring-sky-200"
        };
    }

    string Dot(string type, bool isRead)
    {
        type = (type ?? "").Trim().ToLowerInvariant();
        if (isRead) return "bg-slate-400";

        return type switch
        {
            "success" => "bg-emerald-500",
            "warning" => "bg-amber-500",
            "error"   => "bg-rose-500",
            _         => "bg-sky-500"
        };
    }
}

<div class="min-h-screen bg-gradient-to-b from-slate-50 to-white">
    <div class="mx-auto max-w-5xl px-4 sm:px-6 py-10">

        <!-- Header -->
        <div class="mb-6">
            <div class="flex flex-col gap-3 sm:flex-row sm:items-end sm:justify-between">
                <div>
                    <div class="inline-flex items-center gap-2 rounded-full bg-white px-3 py-1 text-xs font-semibold text-slate-600 ring-1 ring-slate-200">
                        <span class="h-2 w-2 rounded-full bg-indigo-500"></span>
                        System
                    </div>

                    <h1 class="mt-3 text-2xl sm:text-3xl font-extrabold tracking-tight text-slate-900">
                        Thông báo
                    </h1>
                    <p class="mt-1 text-sm text-slate-600">
                        Những cập nhật mới nhất về booking của bạn.
                    </p>
                </div>

                <div class="flex items-center gap-2">
                    <a asp-controller="Booking" asp-action="Index"
                       class="inline-flex items-center justify-center rounded-2xl border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-800 shadow-sm hover:bg-slate-50">
                        ← Về lịch của tôi
                    </a>
                </div>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="rounded-3xl border border-slate-200 bg-white p-8 text-center shadow-sm">
                <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-2xl bg-slate-100 ring-1 ring-slate-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-slate-700" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2a10 10 0 1 0 10 10A10.011 10.011 0 0 0 12 2Zm1 5a1 1 0 0 0-2 0v5a1 1 0 0 0 .293.707l2 2a1 1 0 0 0 1.414-1.414L13 11.586Z"/>
                    </svg>
                </div>
                <div class="mt-4 text-base font-extrabold text-slate-900">Chưa có thông báo nào</div>
                <div class="mt-1 text-sm text-slate-600">Khi có cập nhật, bạn sẽ thấy thông báo ở đây.</div>
            </div>
        }
        else
        {
            <!-- List -->
            <div class="space-y-3">
                @foreach (var n in Model)
                {
                    var localTime = n.CreatedAt.ToLocalTime();
                    var isRead = n.IsRead;

                    <div class="rounded-3xl border border-slate-200 bg-white p-5 shadow-sm hover:shadow-md transition-shadow">
                        <div class="flex items-start justify-between gap-4">
                            <div class="min-w-0">
                                <div class="flex items-center gap-2">
                                    <span class="h-2 w-2 rounded-full @Dot(n.Type, isRead)"></span>
                                    <div class="text-base font-extrabold text-slate-900 truncate">
                                        @n.Title
                                    </div>
                                </div>

                                <div class="mt-1 text-sm text-slate-600">
                                    @n.Message
                                </div>

                                <div class="mt-2 text-xs text-slate-500">
                                    @localTime.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </div>

                            <span class="shrink-0 inline-flex items-center gap-2 rounded-full px-3 py-1 text-xs font-extrabold @Badge(n.Type, isRead)">
                                <span class="h-1.5 w-1.5 rounded-full @(isRead ? "bg-slate-400" : "bg-slate-900")"></span>
                                @(isRead ? "Đã đọc" : "Mới")
                            </span>
                        </div>

                        <!-- Actions -->
                        <div class="mt-4 flex flex-wrap items-center gap-2">
                            @if (!string.IsNullOrWhiteSpace(n.LinkUrl))
                            {
                                <a href="@n.LinkUrl"
                                   class="inline-flex items-center justify-center rounded-2xl bg-slate-900 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-300">
                                    Mở
                                </a>
                            }

                            @if (!isRead)
                            {
                                <form asp-action="MarkRead" method="post" class="inline-block">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@n.Id" />
                                    <button type="submit"
                                            class="inline-flex items-center justify-center rounded-2xl border border-slate-200 bg-white px-4 py-2.5 text-sm font-semibold text-slate-800 shadow-sm hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-indigo-200">
                                        Đánh dấu đã đọc
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Footer tip -->
            <div class="mt-6 rounded-3xl border border-slate-200 bg-gradient-to-br from-indigo-50 to-white p-6 shadow-sm">
                <div class="text-sm font-extrabold text-slate-900">Tip</div>
                <div class="mt-2 text-sm text-slate-700">
                    Bạn nên xử lý các thông báo “Mới” trước để tránh bỏ lỡ lịch hẹn hoặc thay đổi trạng thái.
                </div>
            </div>
        }
    </div>
</div>
