@model IEnumerable<booking.Models.Notification>

@{
    ViewData["Title"] = "Thông báo";

    string Badge(string type, bool isRead)
    {
        type = (type ?? "").Trim().ToLowerInvariant();
        if (isRead) return "bg-slate-100 text-slate-600 border-slate-200";

        return type switch
        {
            "success" => "bg-emerald-50 text-emerald-700 border-emerald-200",
            "warning" => "bg-amber-50 text-amber-700 border-amber-200",
            "error" => "bg-rose-50 text-rose-700 border-rose-200",
            _ => "bg-sky-50 text-sky-700 border-sky-200"
        };
    }
}

<div class="min-h-screen bg-slate-50">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 py-6">
        <div class="flex items-end justify-between gap-3">
            <div>
                <div class="text-xs text-slate-500">System</div>
                <h1 class="mt-1 text-xl sm:text-2xl font-bold text-slate-900">Thông báo</h1>
                <p class="mt-1 text-sm text-slate-600">Những cập nhật mới nhất về booking của bạn.</p>
            </div>
            <a asp-controller="Booking" asp-action="Index"
               class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-800 hover:bg-slate-50">
                ← Về lịch của tôi
            </a>
        </div>

        @if (!Model.Any())
        {
            <div class="mt-6 rounded-3xl border border-slate-200 bg-white p-6 text-sm text-slate-600">
                Chưa có thông báo nào.
            </div>
        }
        else
        {
            <div class="mt-6 space-y-3">
                @foreach (var n in Model)
                {
                    var localTime = n.CreatedAt.ToLocalTime();
                    <div class="rounded-3xl border border-slate-200 bg-white p-5 shadow-sm hover:shadow-md transition">
                        <div class="flex items-start justify-between gap-3">
                            <div class="min-w-0">
                                <div class="text-base font-semibold text-slate-900 truncate">@n.Title</div>
                                <div class="mt-1 text-sm text-slate-600">@n.Message</div>
                                <div class="mt-2 text-xs text-slate-500">@localTime.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>

                            <span class="shrink-0 rounded-full border px-2.5 py-1 text-xs font-semibold @Badge(n.Type, n.IsRead)">
                                @(n.IsRead ? "Đã đọc" : "Mới")
                            </span>
                        </div>

                        <div class="mt-4 flex gap-2">
                            @if (!string.IsNullOrWhiteSpace(n.LinkUrl))
                            {
                                <a href="@n.LinkUrl"
                                   class="inline-flex items-center justify-center rounded-2xl bg-slate-900 px-4 py-2.5 text-sm font-semibold text-white hover:bg-slate-800">
                                    Mở
                                </a>
                            }

                            @if (!n.IsRead)
                            {
                                <form asp-action="MarkRead" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@n.Id" />
                                    <button type="submit"
                                            class="inline-flex items-center justify-center rounded-2xl border border-slate-200 bg-white px-4 py-2.5 text-sm font-semibold text-slate-800 hover:bg-slate-50">
                                        Đánh dấu đã đọc
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
