@model booking.ViewModels.ChooseBusinessCategoriesVm
@{
    ViewData["Title"] = "Chọn danh mục doanh nghiệp";
}

<div class="min-h-screen bg-slate-50">
    <div class="mx-auto flex min-h-screen max-w-2xl items-center px-4 py-10">
        <div class="w-full">
            <div class="rounded-3xl border border-slate-200 bg-white shadow-sm">
                <!-- Header -->
                <div class="border-b border-slate-200 px-6 py-6 sm:px-8">
                    <div class="text-center">
                        <div class="mx-auto inline-flex items-center gap-2 rounded-full bg-emerald-50 px-3 py-1 text-xs font-semibold text-emerald-700 ring-1 ring-emerald-100">
                            <span class="h-2 w-2 rounded-full bg-emerald-500"></span>
                            Bước 2/2 • Hoàn tất đăng ký
                        </div>

                        <h1 class="mt-3 text-xl font-extrabold tracking-tight text-slate-900 sm:text-2xl">
                            Chọn danh mục doanh nghiệp
                        </h1>
                        <p class="mt-1 text-sm text-slate-600">
                            Chọn ít nhất 1 danh mục để admin duyệt hồ sơ của bạn.
                        </p>
                    </div>
                </div>

                <!-- Form -->
                <form asp-controller="Account" asp-action="ChooseCategories" method="post" class="px-6 py-6 sm:px-8">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="BusinessUserId" />

                    <!-- Grid options -->
                    <div class="grid grid-cols-1 gap-3 sm:grid-cols-2">
                        @for (int i = 0; i < Model.Categories.Count; i++)
                        {
                            var c = Model.Categories[i];

                            <label class="group flex cursor-pointer items-center gap-3 rounded-2xl border border-slate-200 bg-white px-4 py-3 transition hover:border-emerald-200 hover:bg-emerald-50/40">
                                <span class="relative flex h-5 w-5 items-center justify-center">
                                    <input type="checkbox"
                                           name="CategoryIds"
                                           value="@c.Id"
                                           @(c.IsChecked ? "checked" : "")
                                           class="peer h-5 w-5 cursor-pointer rounded-md border-slate-300 text-emerald-600 focus:ring-emerald-500" />
                                </span>

                                <div class="min-w-0">
                                    <div class="text-sm font-semibold text-slate-900">
                                        @c.Name
                                    </div>
                                    <div class="text-xs text-slate-500">
                                        Mã: @c.Code
                                    </div>
                                </div>

                                <div class="ml-auto hidden items-center gap-2 text-xs font-semibold text-emerald-700 sm:flex">
                                    <span class="rounded-full bg-emerald-100 px-2 py-1 ring-1 ring-emerald-200">
                                        Chọn
                                    </span>
                                </div>
                            </label>
                        }
                    </div>

                    <!-- Validation -->
                    <div class="mt-3 text-sm text-rose-600">
                        @Html.ValidationMessage("CategoryIds")
                    </div>

                    <!-- Actions -->
                    <div class="mt-6 flex flex-col gap-3">
                        <button type="submit"
                                class="inline-flex w-full items-center justify-center rounded-2xl bg-emerald-600 px-4 py-3 text-sm font-extrabold text-white shadow-sm transition hover:bg-emerald-700 focus:outline-none focus:ring-4 focus:ring-emerald-200">
                            Hoàn tất
                        </button>

                        <a asp-controller="Account" asp-action="Register"
                           class="inline-flex w-full items-center justify-center rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm font-semibold text-slate-700 transition hover:bg-slate-50">
                            Quay lại đăng ký
                        </a>

                        <p class="text-center text-xs text-slate-500">
                            Sau khi hoàn tất, hệ thống sẽ gửi yêu cầu duyệt tới admin.
                        </p>
                    </div>
                </form>
            </div>

            <!-- Footer tiny note -->
            <div class="mt-4 text-center text-xs text-slate-400">
                © Booking • Categories setup
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
