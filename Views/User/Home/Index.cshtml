                </div>

                @if (!string.IsNullOrWhiteSpace(cat))
                {
                    <a asp-controller="User" asp-action="Index" asp-route-q="@q" asp-route-location="@loc"
                        asp-route-sort="@sort" class="text-sm font-medium text-slate-700 hover:underline">
                        Bỏ chọn danh mục
                    </a>
                }
            </div>

            <div class="mt-4 flex flex-wrap gap-2">
