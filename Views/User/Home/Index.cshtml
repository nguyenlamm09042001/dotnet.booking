                @foreach (var s in services)
                {
                    var thumb = string.IsNullOrWhiteSpace(s.Thumbnail) ? servicePlaceholder : Url.Content(s.Thumbnail);

                    <div
                        class="rounded-3xl border border-slate-200 bg-white shadow-sm hover:shadow-md transition overflow-hidden flex flex-col min-h-[460px]">
                        <!-- ✅ THUMBNAIL -->
