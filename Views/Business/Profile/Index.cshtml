@model booking.Models.User

@{
    ViewData["Title"] = "Hồ sơ doanh nghiệp";
}

<div class="min-h-screen bg-slate-50">
    <div class="mx-auto max-w-3xl px-4 py-10">

        <!-- Header -->
        <div class="mb-6">
            <h1 class="text-2xl font-extrabold text-slate-900">
                Hồ sơ doanh nghiệp
            </h1>
            <p class="mt-1 text-sm text-slate-600">
                Cập nhật thông tin hiển thị cho khách hàng.
            </p>
        </div>

        <form method="post"
              class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm space-y-5">

            @Html.AntiForgeryToken()

            <!-- Tên doanh nghiệp -->
            <div>
                <label class="text-sm font-semibold text-slate-700">
                    Tên doanh nghiệp
                </label>
                <input asp-for="FullName"
                       class="mt-2 h-11 w-full rounded-2xl border border-slate-200 px-3 text-sm
                              focus:outline-none focus:ring-2 focus:ring-indigo-300" />
                <span asp-validation-for="FullName" class="text-xs text-rose-600"></span>
            </div>

            <!-- Email -->
            <div>
                <label class="text-sm font-semibold text-slate-700">
                    Email liên hệ
                </label>
                <input asp-for="Email"
                       class="mt-2 h-11 w-full rounded-2xl border border-slate-200 px-3 text-sm
                              focus:outline-none focus:ring-2 focus:ring-indigo-300" />
                <span asp-validation-for="Email" class="text-xs text-rose-600"></span>
            </div>

            <!-- Role (readonly) -->
            <div>
                <label class="text-sm font-semibold text-slate-700">
                    Loại tài khoản
                </label>
                <input value="@Model.Role"
                       disabled
                       class="mt-2 h-11 w-full rounded-2xl border border-slate-200 bg-slate-100 px-3 text-sm text-slate-600" />
            </div>

            <!-- Actions -->
            <div class="flex items-center justify-between pt-4">
                <a asp-controller="Business" asp-action="Dashboard"
                   class="text-sm font-semibold text-slate-600 hover:text-slate-900">
                    ← Về dashboard
                </a>

                <button type="submit"
                        class="inline-flex items-center justify-center rounded-2xl bg-indigo-600 px-5 py-3
                               text-sm font-semibold text-white shadow-sm hover:bg-indigo-700">
                    Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>
