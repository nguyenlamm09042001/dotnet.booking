@model booking.Models.Service
@{
    ViewData["Title"] = "Sửa dịch vụ";
}

<div class="min-h-screen bg-slate-50">
  <div class="mx-auto max-w-3xl px-4 py-8">
    <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-extrabold text-slate-900">Sửa dịch vụ</h1>
          <p class="mt-1 text-sm text-slate-600">Cập nhật thông tin dịch vụ.</p>
        </div>
        <a asp-controller="BusinessServices" asp-action="Index"
           class="inline-flex h-11 items-center justify-center rounded-2xl border border-slate-200 bg-white px-4 text-sm font-semibold text-slate-700 shadow-sm hover:bg-slate-50">
          ← Quay lại
        </a>
      </div>

      <form asp-action="Edit" method="post" class="mt-6 space-y-4">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div>
          <label class="text-sm font-semibold text-slate-900">Tên dịch vụ</label>
          <input asp-for="Name" class="mt-2 h-11 w-full rounded-2xl border border-slate-200 px-3 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-300" />
        </div>

        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
          <div>
            <label class="text-sm font-semibold text-slate-900">Danh mục</label>
            <input asp-for="Category" class="mt-2 h-11 w-full rounded-2xl border border-slate-200 px-3 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-300" />
          </div>
          <div>
            <label class="text-sm font-semibold text-slate-900">Địa điểm</label>
            <input asp-for="Location" class="mt-2 h-11 w-full rounded-2xl border border-slate-200 px-3 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-300" />
          </div>
        </div>

        <div>
          <label class="text-sm font-semibold text-slate-900">Mô tả</label>
          <textarea asp-for="Description" rows="4"
                    class="mt-2 w-full rounded-2xl border border-slate-200 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-300"></textarea>
        </div>

        <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
          <div>
            <label class="text-sm font-semibold text-slate-900">Giá (VND)</label>
            <input asp-for="Price" class="mt-2 h-11 w-full rounded-2xl border border-slate-200 px-3 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-300" />
          </div>
          <div>
            <label class="text-sm font-semibold text-slate-900">Thời lượng (phút)</label>
            <input asp-for="DurationMinutes" class="mt-2 h-11 w-full rounded-2xl border border-slate-200 px-3 text-sm focus:outline-none focus:ring-2 focus:ring-indigo-300" />
          </div>
          <div class="flex items-end gap-3">
            <input asp-for="IsActive" class="h-5 w-5" />
            <label class="text-sm font-semibold text-slate-900">Đang hoạt động</label>
          </div>
        </div>

        <div class="pt-2 flex justify-end gap-2">
          <button type="submit"
                  class="inline-flex h-11 items-center justify-center rounded-2xl bg-slate-900 px-4 text-sm font-semibold text-white shadow-sm hover:bg-slate-800">
            Lưu thay đổi
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
