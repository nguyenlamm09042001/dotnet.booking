@section Scripts {
<script>
    function confirmSubmit(form, title, text) {
        if (!window.Swal) { if (confirm(title + "\n\n" + text)) form.submit(); return; }
        Swal.fire({
            icon: "warning",
            title: title,
            text: text,
            showCancelButton: true,
            confirmButtonText: "X√°c nh·∫≠n",
            cancelButtonText: "H·ªßy",
            reverseButtons: true
        }).then((r) => { if (r.isConfirmed) form.submit(); });
    }

    function toggleMenu(btn) {
        closeAllMenus();
        const wrap = btn.closest('.action-menu');
        if (!wrap) return;
        wrap.classList.toggle('open');
    }

    function closeAllMenus() {
        document.querySelectorAll('.action-menu.open').forEach(x => x.classList.remove('open'));
    }

    // click outside closes menu
    document.addEventListener('click', function(e){
        const inside = e.target.closest('.action-menu');
        if (!inside) closeAllMenus();
    });

    // ESC closes menu + modal
    document.addEventListener('keydown', function(e){
        if (e.key === 'Escape') {
            closeAllMenus();
            closeBookingDetail();
        }
    });

    // ===== DETAIL MODAL =====
    function openBookingDetail(id){
        closeAllMenus();

        const modal = document.getElementById('bookingDetailModal');
        const loading = document.getElementById('bd-loading');
        const body = document.getElementById('bd-body');

        modal.classList.add('open');
        loading.style.display = 'block';
        body.classList.add('hidden');

        document.getElementById('bd-sub').textContent = 'ƒêang t·∫£i...';
        document.getElementById('bd-id').textContent = '#' + id;

        fetch(`@Url.Action("BookingDetail","Staff")?id=${id}`, {
            method: 'GET',
            headers: { 'Accept': 'application/json' }
        })
        .then(async (res) => {
            if (!res.ok) {
                let msg = 'Kh√¥ng t·∫£i ƒë∆∞·ª£c chi ti·∫øt booking.';
                try {
                    const j = await res.json();
                    if (j && j.message) msg = j.message;
                } catch {}
                throw new Error(msg);
            }
            return res.json();
        })
        .then((d) => {
            // d: StaffDetailBookingVm JSON
            // DateOnly => "YYYY-MM-DD", TimeOnly => "HH:mm:ss"
            const dateStr = formatDateOnly(d.date);
            const timeStr = formatTimeOnly(d.time);

            document.getElementById('bd-sub').textContent = `#${d.id} ‚Ä¢ ${dateStr} ${timeStr}`;
            document.getElementById('bd-id').textContent = '#' + d.id;

