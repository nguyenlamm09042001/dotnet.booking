@section Scripts {
<script>
    function openCatsModal(bizId, bizName, categories) {
        const modal = document.getElementById("catsModal");
        const sub = document.getElementById("catsModalSub");
        const body = document.getElementById("catsModalBody");

        sub.textContent = `#BIZ-${bizId} ‚Ä¢ ${bizName} ‚Ä¢ ${categories.length} danh m·ª•c`;
        body.innerHTML = "";

        categories.forEach(c => {
            const span = document.createElement("span");
            span.className =
                "inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-bold text-slate-700 ring-1 ring-slate-200";
            span.textContent = c;
            body.appendChild(span);
        });

        modal.classList.remove("hidden");
        modal.classList.add("flex");
        document.body.style.overflow = "hidden";
    }

    function closeCatsModal() {
        const modal = document.getElementById("catsModal");
        modal.classList.add("hidden");
        modal.classList.remove("flex");
        document.body.style.overflow = "";
    }

    // Click n·ªÅn t·ªëi ƒë·ªÉ ƒë√≥ng
    document.addEventListener("click", function (e) {
        const modal = document.getElementById("catsModal");
        if (!modal.classList.contains("hidden") && e.target === modal) {
            closeCatsModal();
        }
    });

    // ESC ƒë·ªÉ ƒë√≥ng
    document.addEventListener("keydown", function (e) {
        if (e.key === "Escape") closeCatsModal();
    });
</script>
}
