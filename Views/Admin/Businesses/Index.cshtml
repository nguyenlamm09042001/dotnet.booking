@model booking.ViewModels.AdminBusinessesIndexVm

@{
    ViewData["Title"] = "Quản lý doanh nghiệp";
    var now = DateTime.Now;

    var m = Model ?? new booking.ViewModels.AdminBusinessesIndexVm();

    string StatusText(string? s)
    {
        var v = (s ?? "").Trim().ToLowerInvariant();
        return v switch
        {
            "pending" => "Chờ duyệt",
            "active" => "Đang hoạt động",
            "blocked" => "Tạm khóa",
            "rejected" => "Từ chối",
            _ => string.IsNullOrWhiteSpace(s) ? "—" : s!
        };
    }

    string StatusBadge(string? s)
    {
        var v = (s ?? "").Trim().ToLowerInvariant();
        return v switch
        {
            "pending" => "bg-amber-100 text-amber-700 ring-amber-200",
            "active" => "bg-emerald-100 text-emerald-700 ring-emerald-200",
            "blocked" => "bg-slate-200 text-slate-700 ring-slate-300",
            "rejected" => "bg-rose-100 text-rose-700 ring-rose-200",
            _ => "bg-slate-100 text-slate-700 ring-slate-200"
        };
    }

    string Safe(string? x) => string.IsNullOrWhiteSpace(x) ? "—" : x!;
}

<div class="min-h-screen bg-white text-slate-900">
    <!-- Topbar -->
    <header class="sticky top-0 z-40 border-b border-slate-200 bg-white/80 backdrop-blur">
        <div class="mx-auto max-w-7xl px-4">
            <div class="flex h-16 items-center justify-between gap-3">

                <!-- Brand -->
                <div class="flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-2xl bg-slate-100 ring-1 ring-slate-200">
                        <span class="text-sm font-black tracking-tight text-slate-900">ADM</span>
                    </div>
                    <div class="leading-tight">
                        <div class="text-sm font-extrabold tracking-wide text-slate-900">QUẢN LÝ DOANH NGHIỆP</div>
                        <div class="text-xs text-slate-500">User role business • @now.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                </div>

                <!-- Search -->
                <div class="hidden w-full max-w-xl items-center gap-2 md:flex">
                    <form method="get" class="flex w-full items-center gap-2">
                        <div class="relative w-full">
                            <span class="pointer-events-none absolute left-3 top-1/2 -translate-y-1/2 text-slate-400">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M10 2a8 8 0 105.293 14.293l4.707 4.707 1.414-1.414-4.707-4.707A8 8 0 0010 2zm0 2a6 6 0 110 12 6 6 0 010-12z"/>
                                </svg>
                            </span>
                            <input name="q" value="@m.Query"
                                   class="h-11 w-full rounded-2xl border border-slate-300 bg-white pl-10 pr-3 text-sm text-slate-900 placeholder:text-slate-400
                                          focus:outline-none focus:ring-2 focus:ring-indigo-500"
                                   placeholder="Tìm doanh nghiệp (tên/email)..." />
                        </div>
                        <input type="hidden" name="pageSize" value="@m.PageSize" />
                        <button type="submit"
                                class="inline-flex h-11 items-center justify-center rounded-2xl border border-slate-300 bg-white px-4 text-sm font-semibold text-slate-900
                                       hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                            Tìm
                        </button>
                    </form>
                </div>

                <!-- Actions -->
                <div class="flex items-center gap-2">
                    <a asp-controller="Admin" asp-action="Index"
                       class="inline-flex h-11 items-center justify-center rounded-2xl border border-slate-300 bg-white px-4 text-sm font-semibold text-slate-900
                              hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        ← Dashboard
                    </a>

                    <form asp-controller="Account" asp-action="Logout" method="post" class="inline-block">
                        @Html.AntiForgeryToken()
                        <button type="submit"
                                class="inline-flex h-11 items-center justify-center rounded-2xl bg-rose-600 px-4 text-sm font-semibold text-white
                                       hover:bg-rose-700 focus:outline-none focus:ring-2 focus:ring-rose-400">
                            Đăng xuất
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </header>

    <div class="mx-auto max-w-7xl px-4 py-8">
        <div class="grid grid-cols-1 gap-6 lg:grid-cols-12">

            <!-- Sidebar -->
            <aside class="lg:col-span-3">
                <div class="rounded-3xl border border-slate-200 bg-white p-4 shadow-sm">
                    <div class="text-xs font-bold uppercase tracking-wider text-slate-500">Điều hướng</div>

                    <nav class="mt-4 space-y-2">
                        <a asp-controller="Admin" asp-action="Index"
                           class="flex items-center justify-between rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm font-semibold text-slate-700 hover:bg-slate-50">
                            <span>Bảng điều khiển</span>
                            <span class="text-slate-400">↩</span>
                        </a>

                        <a asp-controller="AdminBusinesses" asp-action="Index"
                           class="flex items-center justify-between rounded-2xl border border-slate-200 bg-slate-50 px-4 py-3 text-sm font-semibold text-slate-900 hover:bg-slate-100">
                            <span>Doanh nghiệp</span>
                            <span class="text-slate-400">→</span>
                        </a>

                        <a asp-controller="AdminUsers" asp-action="Index"
                           class="flex items-center justify-between rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm font-semibold text-slate-700 hover:bg-slate-50">
                            <span>Người dùng</span>
                            <span class="text-slate-400">→</span>
                        </a>
                    </nav>

                    <div class="mt-5 rounded-2xl border border-slate-200 bg-slate-50 p-4">
                        <div class="flex items-start justify-between gap-3">
                            <div>
                                <div class="text-sm font-bold text-slate-900">Tổng doanh nghiệp</div>
                                <div class="mt-1 text-sm text-slate-600">Role = business</div>
                            </div>
                            <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-bold text-slate-700 ring-1 ring-slate-200">
                                @m.TotalItems
                            </span>
                        </div>
                    </div>
                </div>
            </aside>

            <!-- Main -->
            <main class="lg:col-span-9 space-y-6">

                <!-- Header box -->
                <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
                    <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
                        <div>
                            <h1 class="text-2xl font-extrabold tracking-tight text-slate-900">Danh sách doanh nghiệp</h1>
                            <p class="mt-1 text-sm text-slate-600">
                                Hiện tại doanh nghiệp = tài khoản user có role <span class="font-semibold text-slate-900">business</span>.
                            </p>
                        </div>

                        <form method="get" class="flex items-center gap-2">
                            <input type="hidden" name="q" value="@m.Query" />
                            <select name="pageSize"
                                    class="h-11 rounded-2xl border border-slate-300 bg-white px-3 text-sm font-semibold text-slate-900
                                           focus:outline-none focus:ring-2 focus:ring-indigo-500">
                                @{
                                    int[] sizes = new[] { 10, 20, 50 };
                                    foreach (var s in sizes)
                                    {
                                        <option value="@s" selected="@(m.PageSize == s ? "selected" : null)">@s / trang</option>
                                    }
                                }
                            </select>

                            <button type="submit"
                                    class="inline-flex h-11 items-center justify-center rounded-2xl border border-slate-300 bg-white px-4 text-sm font-semibold text-slate-900
                                           hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                                Áp dụng
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Table -->
                <section class="rounded-3xl border border-slate-200 bg-white shadow-sm">
                    <div class="flex flex-col gap-3 px-6 py-5 sm:flex-row sm:items-center sm:justify-between">
                        <div>
                            <div class="text-lg font-extrabold text-slate-900">Bảng doanh nghiệp</div>
                            <div class="mt-1 text-sm text-slate-600">
                                Hiển thị <span class="font-semibold text-slate-900">@m.FromItem</span>–<span class="font-semibold text-slate-900">@m.ToItem</span> /
                                <span class="font-semibold text-slate-900">@m.TotalItems</span>
                            </div>
                        </div>
                    </div>

                    <div class="h-px bg-slate-200"></div>

                    <div class="overflow-x-auto">
                        <table class="min-w-full text-left text-sm">
                            <thead class="bg-slate-100">
                                <tr class="text-xs font-bold uppercase tracking-wider text-slate-600">
                                    <th class="px-6 py-4">Doanh nghiệp</th>
                                    <th class="px-6 py-4">Email</th>
                                    <th class="px-6 py-4">Dịch vụ</th>
                                    <th class="px-6 py-4">Lịch hẹn</th>
                                    <th class="px-6 py-4">Ngày tạo</th>
                                    <th class="px-6 py-4">Trạng thái</th>
                                    <th class="px-6 py-4 text-right">Thao tác</th>
                                </tr>
                            </thead>

                            <tbody class="divide-y divide-slate-200">
                                @if (m.Items == null || !m.Items.Any())
                                {
                                    <tr>
                                        <td colspan="7" class="px-6 py-10">
                                            <div class="rounded-2xl border border-slate-200 bg-slate-50 p-6 text-center">
                                                <div class="text-sm font-bold text-slate-900">Không có doanh nghiệp nào</div>
                                                <div class="mt-1 text-sm text-slate-600">Thử đổi từ khoá tìm kiếm.</div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var b in m.Items)
                                    {
                                        <tr class="hover:bg-slate-50">
                                            <td class="px-6 py-4">
                                                <div class="font-semibold text-slate-900">@Safe(b.Name)</div>
                                                <div class="text-xs text-slate-500">#@b.Id</div>
                                            </td>

                                            <td class="px-6 py-4">
                                                <div class="text-slate-900">@Safe(b.OwnerEmail)</div>
                                            </td>

                                            <td class="px-6 py-4">
                                                <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-bold text-slate-700 ring-1 ring-slate-200">
                                                    @b.ServiceCount
                                                </span>
                                            </td>

                                            <td class="px-6 py-4">
                                                <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-bold text-slate-700 ring-1 ring-slate-200">
                                                    @b.BookingCount
                                                </span>
                                            </td>

                                            <td class="px-6 py-4 text-slate-700">
                                                @b.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                            </td>

                                            <td class="px-6 py-4">
                                                <span class="inline-flex items-center rounded-full px-3 py-1 text-xs font-bold ring-1 @StatusBadge(b.Status)">
                                                    @StatusText(b.Status)
                                                </span>
                                            </td>

                                            <td class="px-6 py-4">
                                                <div class="flex justify-end gap-2">
                                                    <a asp-controller="AdminUsers" asp-action="Index"
                                                       class="inline-flex h-10 min-w-[92px] items-center justify-center rounded-xl border border-slate-300 bg-white px-3 text-xs font-bold text-slate-900 hover:bg-slate-50">
                                                        Xem user
                                                    </a>

                                                    <button type="button"
                                                            class="inline-flex h-10 min-w-[92px] items-center justify-center rounded-xl bg-slate-900 px-3 text-xs font-bold text-white hover:bg-slate-800">
                                                        Khóa (sắp có)
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <div class="flex flex-col gap-3 px-6 py-5 sm:flex-row sm:items-center sm:justify-between">
                        <div class="text-sm text-slate-600">
                            Trang <span class="font-semibold text-slate-900">@m.Page</span> /
                            <span class="font-semibold text-slate-900">@m.TotalPages</span>
                        </div>

                        @{
                            var q = m.Query ?? "";
                            var ps = m.PageSize;
                            var p = m.Page;
                            var tp = m.TotalPages;
                        }

                        <div class="flex flex-wrap items-center gap-2">
                            <a asp-controller="AdminBusinesses" asp-action="Index"
                               asp-route-page="@(p - 1)"
                               asp-route-pageSize="@ps"
                               asp-route-q="@q"
                               class="inline-flex h-10 items-center justify-center rounded-xl border border-slate-300 bg-white px-3 text-xs font-bold text-slate-900 hover:bg-slate-50 @(p <= 1 ? "pointer-events-none opacity-50" : "")">
                                ← Trước
                            </a>

                            <span class="inline-flex h-10 items-center justify-center rounded-xl border border-slate-200 bg-slate-50 px-3 text-xs font-bold text-slate-700">
                                @m.FromItem–@m.ToItem
                            </span>

                            <a asp-controller="AdminBusinesses" asp-action="Index"
                               asp-route-page="@(p + 1)"
                               asp-route-pageSize="@ps"
                               asp-route-q="@q"
                               class="inline-flex h-10 items-center justify-center rounded-xl border border-slate-300 bg-white px-3 text-xs font-bold text-slate-900 hover:bg-slate-50 @(p >= tp ? "pointer-events-none opacity-50" : "")">
                                Sau →
                            </a>
                        </div>
                    </div>
                </section>

            </main>
        </div>
    </div>
</div>
