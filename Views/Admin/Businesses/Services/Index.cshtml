@model booking.ViewModels.AdminServicesIndexVm

@{
    ViewData["Title"] = "Quản trị dịch vụ";
    var now = DateTime.Now;

    string StatusBadge(bool isActive)
    {
        return isActive
            ? "inline-flex items-center rounded-full bg-emerald-100 px-3 py-1 text-xs font-bold text-emerald-700 ring-1 ring-emerald-200"
            : "inline-flex items-center rounded-full bg-slate-200 px-3 py-1 text-xs font-bold text-slate-700 ring-1 ring-slate-300";
    }

    string StatusText(bool isActive) => isActive ? "Đang hoạt động" : "Tạm khoá";

    @* string Keep(string key) => Context.Request.Query[key].ToString(); *@

    string BuildReturnUrl()
    {
        var path = Context.Request.Path.ToString();
        var qs = Context.Request.QueryString.ToString();
        return path + qs;
    }
}

<div class="min-h-screen bg-white text-slate-900">
    <!-- Thanh trên -->
    <header class="sticky top-0 z-40 border-b border-slate-200 bg-white/80 backdrop-blur">
        <div class="mx-auto max-w-7xl px-4">
            <div class="flex h-16 items-center justify-between gap-3">
                <!-- Thương hiệu -->
                <div class="flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-2xl bg-slate-100 ring-1 ring-slate-200">
                        <span class="text-sm font-black tracking-tight text-slate-900">ADM</span>
                    </div>
                    <div class="leading-tight">
                        <div class="text-sm font-extrabold tracking-wide text-slate-900">QUẢN TRỊ DỊCH VỤ</div>
                        <div class="text-xs text-slate-500">Danh sách toàn hệ thống • @now.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                </div>

                <!-- Search nhanh -->
                <div class="hidden w-full max-w-xl items-center gap-2 md:flex">
                    <form asp-controller="AdminServices" asp-action="Index" method="get" class="flex w-full items-center gap-2">
                        <input type="hidden" name="status" value="@(Model.Status ?? "all")" />
                        <input type="hidden" name="cat" value="@(Model.Cat ?? "")" />
                        <input type="hidden" name="sort" value="@(Model.Sort ?? "newest")" />

                        <div class="relative w-full">
                            <span class="pointer-events-none absolute left-3 top-1/2 -translate-y-1/2 text-slate-400">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M10 2a8 8 0 105.293 14.293l4.707 4.707 1.414-1.414-4.707-4.707A8 8 0 0010 2zm0 2a6 6 0 110 12 6 6 0 010-12z"/>
                                </svg>
                            </span>

                            <input type="text"
                                   name="q"
                                   value="@(Model.Q ?? "")"
                                   class="h-11 w-full rounded-2xl border border-slate-300 bg-white pl-10 pr-3 text-sm text-slate-900 placeholder:text-slate-400
                                          focus:outline-none focus:ring-2 focus:ring-indigo-500"
                                   placeholder="Tìm theo tên dịch vụ, danh mục, vị trí…" />
                        </div>

                        <button type="submit"
                                class="inline-flex h-11 items-center justify-center rounded-2xl border border-slate-300 bg-white px-4 text-sm font-semibold text-slate-900
                                       hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                            Tìm
                        </button>

                        <a asp-controller="Admin" asp-action="Index"
                           class="inline-flex h-11 items-center justify-center rounded-2xl border border-slate-300 bg-white px-4 text-sm font-semibold text-slate-900
                                  hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                            Dashboard
                        </a>
                    </form>
                </div>

                <!-- Hành động -->
                <div class="flex items-center gap-2">
                    <form asp-controller="Account" asp-action="Logout" method="post" class="inline-block">
                        @Html.AntiForgeryToken()
                        <button type="submit"
                                class="inline-flex h-11 items-center justify-center rounded-2xl bg-rose-600 px-4 text-sm font-semibold text-white
                                       hover:bg-rose-700 focus:outline-none focus:ring-2 focus:ring-rose-400">
                            Đăng xuất
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </header>

    <div class="mx-auto max-w-7xl px-4 py-8">
        <div class="grid grid-cols-1 gap-6 lg:grid-cols-12">

            <!-- Thanh bên -->
            <aside class="lg:col-span-3">
                <div class="rounded-3xl border border-slate-200 bg-white p-4 shadow-sm">
                    <div class="text-xs font-bold uppercase tracking-wider text-slate-500">Điều hướng</div>

                    <nav class="mt-4 space-y-2">
                        <a asp-controller="Admin" asp-action="Index"
                           class="flex items-center justify-between rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm font-semibold text-slate-700 hover:bg-slate-50">
                            <span>Bảng điều khiển</span>
                            <span class="text-slate-400">→</span>
                        </a>

                        <a asp-controller="AdminBusinesses" asp-action="Index"
                           class="flex items-center justify-between rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm font-semibold text-slate-700 hover:bg-slate-50">
                            <span>Doanh nghiệp</span>
                            <span class="text-slate-400">→</span>
                        </a>

                        <a asp-controller="AdminUsers" asp-action="Index"
                           class="flex items-center justify-between rounded-2xl border border-slate-200 bg-white px-4 py-3 text-sm font-semibold text-slate-700 hover:bg-slate-50">
                            <span>Người dùng</span>
                            <span class="text-slate-400">→</span>
                        </a>

                        <a asp-controller="AdminServices" asp-action="Index"
                           class="flex items-center justify-between rounded-2xl border border-slate-200 bg-slate-50 px-4 py-3 text-sm font-semibold text-slate-900 hover:bg-slate-100">
                            <span>Dịch vụ</span>
                            <span class="text-slate-400">↩</span>
                        </a>
                    </nav>

                    <div class="mt-5 rounded-2xl border border-slate-200 bg-slate-50 p-4">
                        <div class="text-sm font-bold text-slate-900">Tổng dịch vụ</div>
                        <div class="mt-2 text-3xl font-extrabold text-slate-900">@Model.TotalServices</div>

                        <div class="mt-3 space-y-1 text-sm text-slate-600">
                            <div>Đang hoạt động: <span class="font-semibold text-emerald-700">@Model.ActiveServices</span></div>
                            <div>Tạm khoá: <span class="font-semibold text-slate-900">@Model.InactiveServices</span></div>
                        </div>
                    </div>
                </div>
            </aside>

            <!-- Nội dung chính -->
            <main class="lg:col-span-9 space-y-6">

                <!-- Card tiêu đề + filters -->
                <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
                    <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
                        <div>
                            <h1 class="text-2xl font-extrabold tracking-tight text-slate-900">Quản trị dịch vụ hệ thống</h1>
                            <p class="mt-1 text-sm text-slate-600">
                                Tìm kiếm • lọc • khoá/mở • xoá dịch vụ
                            </p>
                        </div>

                        <a asp-controller="Admin" asp-action="Index"
                           class="inline-flex h-11 items-center justify-center rounded-2xl border border-slate-300 bg-white px-4 text-sm font-semibold text-slate-900
                                  hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                            ← Về Dashboard
                        </a>
                    </div>

                    <div class="mt-5 grid grid-cols-1 gap-3 md:grid-cols-12">
                        <form asp-controller="AdminServices" asp-action="Index" method="get" class="md:col-span-12 grid grid-cols-1 gap-3 md:grid-cols-12">
                            <div class="md:col-span-5">
                                <label class="text-xs font-bold uppercase tracking-wider text-slate-500">Tìm kiếm</label>
                                <div class="relative mt-1">
                                    <span class="pointer-events-none absolute left-3 top-1/2 -translate-y-1/2 text-slate-400">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
                                            <path d="M10 2a8 8 0 105.293 14.293l4.707 4.707 1.414-1.414-4.707-4.707A8 8 0 0010 2zm0 2a6 6 0 110 12 6 6 0 010-12z"/>
                                        </svg>
                                    </span>
                                    <input name="q" value="@(Model.Q ?? "")"
                                           class="h-11 w-full rounded-2xl border border-slate-300 bg-white pl-10 pr-3 text-sm text-slate-900 placeholder:text-slate-400
                                                  focus:outline-none focus:ring-2 focus:ring-indigo-500"
                                           placeholder="Tên dịch vụ / danh mục / vị trí…" />
                                </div>
                            </div>

                            <div class="md:col-span-3">
                                <label class="text-xs font-bold uppercase tracking-wider text-slate-500">Trạng thái</label>
                                <select name="status"
                                        class="mt-1 h-11 w-full rounded-2xl border border-slate-300 bg-white px-3 text-sm text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                                    <option value="all" selected="@( (Model.Status ?? "all") == "all")">Tất cả</option>
                                    <option value="active" selected="@( (Model.Status ?? "all") == "active")">Đang hoạt động</option>
                                    <option value="inactive" selected="@( (Model.Status ?? "all") == "inactive")">Tạm khoá</option>
                                </select>
                            </div>

                            <div class="md:col-span-2">
                                <label class="text-xs font-bold uppercase tracking-wider text-slate-500">Danh mục</label>
                                <select name="cat"
                                        class="mt-1 h-11 w-full rounded-2xl border border-slate-300 bg-white px-3 text-sm text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                                    <option value="">Tất cả</option>
                                    @foreach (var c in (Model.Categories ?? new List<string>()))
                                    {
                                        <option value="@c" selected="@(Model.Cat == c)">@c</option>
                                    }
                                </select>
                            </div>

                            <div class="md:col-span-2">
                                <label class="text-xs font-bold uppercase tracking-wider text-slate-500">Sắp xếp</label>
                                <select name="sort"
                                        class="mt-1 h-11 w-full rounded-2xl border border-slate-300 bg-white px-3 text-sm text-slate-900 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                                    <option value="newest" selected="@(Model.Sort == "newest")">Mới nhất</option>
                                    <option value="oldest" selected="@(Model.Sort == "oldest")">Cũ nhất</option>
                                    <option value="name_asc" selected="@(Model.Sort == "name_asc")">Tên A→Z</option>
                                    <option value="name_desc" selected="@(Model.Sort == "name_desc")">Tên Z→A</option>
                                    <option value="price_asc" selected="@(Model.Sort == "price_asc")">Giá tăng</option>
                                    <option value="price_desc" selected="@(Model.Sort == "price_desc")">Giá giảm</option>
                                </select>
                            </div>

                            <div class="md:col-span-12 flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
                                <button type="submit"
                                        class="inline-flex h-11 items-center justify-center rounded-2xl bg-indigo-600 px-4 text-sm font-semibold text-white hover:bg-indigo-700
                                               focus:outline-none focus:ring-2 focus:ring-indigo-500">
                                    Áp dụng lọc
                                </button>

                                <a asp-controller="AdminServices" asp-action="Index"
                                   class="inline-flex h-11 items-center justify-center rounded-2xl border border-slate-300 bg-white px-4 text-sm font-semibold text-slate-900 hover:bg-slate-50">
                                    Reset
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Bảng -->
                <section class="rounded-3xl border border-slate-200 bg-white shadow-sm">
                    <div class="flex flex-col gap-3 px-6 py-5 sm:flex-row sm:items-center sm:justify-between">
                        <div>
                            <div class="text-lg font-extrabold text-slate-900">Bảng dịch vụ</div>
                            <div class="mt-1 text-sm text-slate-600">
                                Hiển thị <span class="font-semibold text-slate-900">@Model.FromItem</span>–<span class="font-semibold text-slate-900">@Model.ToItem</span> /
                                <span class="font-semibold text-slate-900">@Model.TotalItems</span>
                            </div>
                        </div>

                        <div class="text-xs text-slate-500">
                            Trang <span class="font-semibold text-slate-900">@Model.Page</span>/<span class="font-semibold text-slate-900">@Model.TotalPages</span>
                        </div>
                    </div>

                    <div class="h-px bg-slate-200"></div>

                    <div class="overflow-x-auto">
                        <table class="min-w-full text-left text-sm">
                            <thead class="bg-slate-100">
                                <tr class="text-xs font-bold uppercase tracking-wider text-slate-600">
                                    <th class="px-6 py-4">Dịch vụ</th>
                                    <th class="px-6 py-4">Danh mục</th>
                                    <th class="px-6 py-4">Giá</th>
                                    <th class="px-6 py-4">Thời lượng</th>
                                    <th class="px-6 py-4">Ngày tạo</th>
                                    <th class="px-6 py-4">Trạng thái</th>
                                    <th class="px-6 py-4 text-right">Thao tác</th>
                                </tr>
                            </thead>

                            <tbody class="divide-y divide-slate-200">
                                @if (Model.Items == null || !Model.Items.Any())
                                {
                                    <tr>
                                        <td colspan="7" class="px-6 py-8 text-sm text-slate-500">
                                            Không có dịch vụ nào phù hợp bộ lọc.
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var s in Model.Items)
                                    {
                                        <tr class="hover:bg-slate-50">
                                            <td class="px-6 py-4">
                                                <div class="font-semibold text-slate-900">@s.Name</div>
                                                <div class="text-xs text-slate-500">
                                                    #SRV-@s.Id • @s.Location
                                                </div>
                                            </td>

                                            <td class="px-6 py-4 text-slate-700">@s.Category</td>

                                            <td class="px-6 py-4 text-slate-700">
                                                @String.Format("{0:n0}", s.Price) đ
                                            </td>

                                            <td class="px-6 py-4 text-slate-700">
                                                @s.DurationMinutes phút
                                            </td>

                                            <td class="px-6 py-4 text-slate-700">@s.CreatedAt.ToString("dd/MM HH:mm")</td>

                                            <td class="px-6 py-4">
                                                <span class="@StatusBadge(s.IsActive)">@StatusText(s.IsActive)</span>
                                            </td>

                                            <td class="px-6 py-4">
                                                <div class="flex justify-end gap-2">
                                                    <form asp-controller="AdminServices" asp-action="ToggleActive" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@s.Id" />
                                                        <input type="hidden" name="returnUrl" value="@BuildReturnUrl()" />

                                                        @if (s.IsActive)
                                                        {
                                                            <button type="submit"
                                                                    class="inline-flex h-10 min-w-[110px] items-center justify-center rounded-xl bg-slate-800 px-3 text-xs font-bold text-white hover:bg-slate-900">
                                                                Khoá
                                                            </button>
                                                        }
                                                        else
                                                        {
                                                            <button type="submit"
                                                                    class="inline-flex h-10 min-w-[110px] items-center justify-center rounded-xl bg-emerald-600 px-3 text-xs font-bold text-white hover:bg-emerald-700">
                                                                Mở
                                                            </button>
                                                        }
                                                    </form>

                                                    <form asp-controller="AdminServices" asp-action="Delete" method="post"
                                                          onsubmit="return confirm('Xoá dịch vụ này? Hành động không thể hoàn tác.');">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@s.Id" />
                                                        <input type="hidden" name="returnUrl" value="@BuildReturnUrl()" />
                                                        <button type="submit"
                                                                class="inline-flex h-10 min-w-[110px] items-center justify-center rounded-xl bg-rose-600 px-3 text-xs font-bold text-white hover:bg-rose-700">
                                                            Xoá
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <div class="flex flex-col gap-3 px-6 py-5 sm:flex-row sm:items-center sm:justify-between">
                        <div class="text-sm text-slate-600">
                            @if (Model.TotalItems == 0)
                            {
                                <span>Không có dữ liệu.</span>
                            }
                            else
                            {
                                <span>Đang xem @Model.FromItem–@Model.ToItem / @Model.TotalItems</span>
                            }
                        </div>

                        <div class="flex items-center gap-2">
                            @{
                                var prev = Math.Max(1, Model.Page - 1);
                                var next = Math.Min(Model.TotalPages == 0 ? 1 : Model.TotalPages, Model.Page + 1);
                            }

                            <a asp-controller="AdminServices" asp-action="Index"
                               asp-route-page="@prev"
                               asp-route-q="@(Model.Q ?? "")"
                               asp-route-status="@(Model.Status ?? "all")"
                               asp-route-cat="@(Model.Cat ?? "")"
                               asp-route-sort="@(Model.Sort ?? "newest")"
                               class="inline-flex h-10 items-center justify-center rounded-xl border border-slate-300 bg-white px-3 text-xs font-bold text-slate-900 hover:bg-slate-50 @(Model.Page <= 1 ? "pointer-events-none opacity-50" : "")">
                                ← Trước
                            </a>

                            <a asp-controller="AdminServices" asp-action="Index"
                               asp-route-page="@next"
                               asp-route-q="@(Model.Q ?? "")"
                               asp-route-status="@(Model.Status ?? "all")"
                               asp-route-cat="@(Model.Cat ?? "")"
                               asp-route-sort="@(Model.Sort ?? "newest")"
                               class="inline-flex h-10 items-center justify-center rounded-xl border border-slate-300 bg-white px-3 text-xs font-bold text-slate-900 hover:bg-slate-50 @(Model.Page >= Model.TotalPages ? "pointer-events-none opacity-50" : "")">
                                Sau →
                            </a>
                        </div>
                    </div>
                </section>

            </main>
        </div>
    </div>
</div>
