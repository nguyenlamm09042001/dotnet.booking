@model booking.Models.User

@{
    ViewData["Title"] = "Chi tiết người dùng";

    string Norm(string? s) => (s ?? "").Trim().ToLowerInvariant();
    bool IsLocked(string? status) => Norm(status) == "locked";

    string StatusText(string? status)
        => IsLocked(status) ? "Đang bị khoá" : "Hoạt động";

    string StatusBadge(string? status)
        => IsLocked(status)
            ? "bg-rose-50 text-rose-700 ring-rose-200"
            : "bg-emerald-50 text-emerald-700 ring-emerald-200";

    string StatusDot(string? status)
        => IsLocked(status) ? "bg-rose-500" : "bg-emerald-500";

    string Safe(string? x) => string.IsNullOrWhiteSpace(x) ? "—" : x!;
}

<div class="min-h-screen bg-gradient-to-b from-slate-50 to-white text-slate-900">
    <div class="mx-auto max-w-5xl px-4 py-10 space-y-6">

        <!-- Header -->
        <div class="flex flex-col gap-3 sm:flex-row sm:items-end sm:justify-between">
            <div>
                <div class="inline-flex items-center gap-2 rounded-full bg-white px-3 py-1 text-xs font-semibold text-slate-600 ring-1 ring-slate-200">
                    <span class="h-2 w-2 rounded-full bg-indigo-500"></span>
                    Admin
                </div>

                <h1 class="mt-3 text-2xl sm:text-3xl font-extrabold tracking-tight text-slate-900">
                    Chi tiết người dùng
                </h1>
                <p class="mt-1 text-sm text-slate-600">
                    ID: <span class="font-semibold text-slate-900">#@Model.Id</span>
                </p>
            </div>

            <div class="flex items-center gap-2">
                <a asp-controller="AdminUsers" asp-action="Index"
                   class="inline-flex items-center justify-center rounded-2xl border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-800 shadow-sm hover:bg-slate-50">
                    ← Quay lại
                </a>
            </div>
        </div>

        <!-- Main grid -->
        <div class="grid grid-cols-1 gap-6 lg:grid-cols-12">

            <!-- Info card -->
            <div class="lg:col-span-8 rounded-3xl border border-slate-200 bg-white shadow-sm">
                <div class="border-b border-slate-200 px-6 py-5">
                    <div class="text-lg font-extrabold text-slate-900">Thông tin tài khoản</div>
                    <div class="mt-1 text-sm text-slate-600">Thông tin hiển thị và trạng thái hoạt động.</div>
                </div>

                <div class="px-6 py-6 space-y-5">
                    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">

                        <div class="rounded-3xl border border-slate-200 bg-slate-50 p-5">
                            <div class="text-xs font-semibold text-slate-500">Họ tên</div>
                            <div class="mt-1 text-base font-extrabold text-slate-900 break-words">@Safe(Model.FullName)</div>
                        </div>

                        <div class="rounded-3xl border border-slate-200 bg-slate-50 p-5">
                            <div class="text-xs font-semibold text-slate-500">Email</div>
                            <div class="mt-1 text-base font-semibold text-slate-900 break-all">@Safe(Model.Email)</div>
                        </div>

                        <div class="rounded-3xl border border-slate-200 bg-white p-5">
                            <div class="text-xs font-semibold text-slate-500">Vai trò</div>
                            <div class="mt-1 inline-flex items-center rounded-full bg-white px-3 py-1 text-sm font-extrabold text-slate-900 ring-1 ring-slate-200">
                                @Safe(Model.Role)
                            </div>
                        </div>

                        <div class="rounded-3xl border border-slate-200 bg-white p-5">
                            <div class="text-xs font-semibold text-slate-500">Trạng thái</div>
                            <div class="mt-1">
                                <span class="inline-flex items-center gap-2 rounded-full px-3 py-1 text-xs font-extrabold ring-1 @StatusBadge(Model.Status)">
                                    <span class="h-2 w-2 rounded-full @StatusDot(Model.Status)"></span>
                                    @StatusText(Model.Status)
                                </span>
                            </div>
                        </div>

                        <div class="sm:col-span-2 rounded-3xl border border-slate-200 bg-white p-5">
                            <div class="text-xs font-semibold text-slate-500">Ngày tạo</div>
                            <div class="mt-1 text-sm font-semibold text-slate-900">
                                @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                            </div>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="flex flex-col gap-3 border-t border-slate-200 pt-5 sm:flex-row sm:items-center sm:justify-between">
                        <div class="text-xs text-slate-500">
                            * Khoá tài khoản sẽ chặn đăng nhập cho đến khi mở khoá.
                        </div>

                        <!-- Nút khoá / mở khoá (SweetAlert confirm thay cho confirm()) -->
                        <form id="toggleLockForm"
                              asp-controller="AdminUsers" asp-action="ToggleLock" method="post"
                              class="inline-block">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />

                            <button type="submit"
                                    class="inline-flex h-11 items-center justify-center rounded-2xl px-6 text-sm font-extrabold text-white shadow-sm
                                           @(IsLocked(Model.Status)
                                               ? "bg-slate-900 hover:bg-slate-800 focus:ring-slate-300"
                                               : "bg-amber-600 hover:bg-amber-700 focus:ring-amber-300")
                                           focus:outline-none focus:ring-2">
                                @(IsLocked(Model.Status) ? "Mở khoá tài khoản" : "Khoá tài khoản")
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Side card -->
            <div class="lg:col-span-4 space-y-6">
                <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
                    <div class="text-sm font-extrabold text-slate-900">Gợi ý</div>
                    <div class="mt-2 space-y-2 text-sm text-slate-600">
                        <div class="flex gap-2">
                            <span class="mt-1 h-2 w-2 rounded-full bg-amber-500"></span>
                            <div>Chỉ khoá khi phát hiện hành vi bất thường hoặc vi phạm.</div>
                        </div>
                        <div class="flex gap-2">
                            <span class="mt-1 h-2 w-2 rounded-full bg-emerald-500"></span>
                            <div>Mở khoá khi đã xác minh lại người dùng.</div>
                        </div>
                        <div class="flex gap-2">
                            <span class="mt-1 h-2 w-2 rounded-full bg-indigo-500"></span>
                            <div>Kiểm tra lịch sử booking trước khi thao tác.</div>
                        </div>
                    </div>
                </div>

                <div class="rounded-3xl border border-slate-200 bg-gradient-to-br from-indigo-50 to-white p-6 shadow-sm">
                    <div class="text-sm font-extrabold text-slate-900">Trạng thái</div>
                    <div class="mt-2 text-sm text-slate-700">
                        <span class="font-semibold">Hoạt động</span>: đăng nhập bình thường.<br />
                        <span class="font-semibold">Đang bị khoá</span>: không thể đăng nhập.
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
<script>
  (function(){
    const form = document.getElementById('toggleLockForm');
    if (!form) return;

    const isLocked = '@(IsLocked(Model.Status) ? "1" : "0")' === "1";

    form.addEventListener('submit', function(ev){
      ev.preventDefault();

      const title = isLocked ? 'Mở khoá tài khoản?' : 'Khoá tài khoản?';
      const text  = isLocked
        ? 'Bạn có chắc muốn mở khoá tài khoản này không?'
        : 'Bạn có chắc muốn khoá tài khoản này không? Người dùng sẽ không thể đăng nhập.';

      Swal.fire({
        icon: 'question',
        title,
        text,
        showCancelButton: true,
        confirmButtonText: isLocked ? 'Mở khoá' : 'Khoá',
        cancelButtonText: 'Hủy',
        reverseButtons: true,
        confirmButtonColor: isLocked ? '#0f172a' : '#d97706'
      }).then((r) => {
        if (r.isConfirmed) form.submit();
      });
    });

    // swal từ TempData (nếu controller có set)
    @if (TempData["SwalType"] != null)
    {
      <text>
      Swal.fire({
        icon: '@TempData["SwalType"]',
        title: '@TempData["SwalTitle"]',
        text: '@TempData["SwalMessage"]'
      });
      </text>
    }
  })();
</script>
}
